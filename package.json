{
  "name": "@thorerikgildihub/ui",
  "version": "0.1.0",
  "description": "GildiHub UI components for React + Tailwind, powered by @thorerikgildihub/theme tokens.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./components/*": "./dist/components/*"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@thorerikgildihub/theme": ">=0.1.0",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "peerDependenciesMeta": {
    "@thorerikgildihub/theme": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "clsx": "^2.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThorErikGildiHub/gildihub-ui.git"
  },
  "license": "MIT"
}
